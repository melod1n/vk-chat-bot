{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "dist",
    "mapRoot": "maps",
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": [
      "reflect-metadata"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/*",
    "src/*/*",
    "src/*/*/*",
    "data/*"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ],
  "ts-node": {
    "compiler": "typescript"
  }
}